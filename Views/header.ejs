<!DOCTYPE html>
<html>
    <head>
        <title>Noticias</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar justify-content-center navbar-expand-sm  navbar-dark bg-primary">
            <a class="navbar-brand p-3">WORLD NEWS</a>
        </nav>

        <article class="container">
            <div class="row">
                <section class="col-8 p-3 my-3 border">
                    <h1 class="h2 text-primary">News</h1>   
                    <% for(var i = 0; i < news.length; i++){ %>
                        <div class="container p-3 my-3 border">
                            <h2 class="h3"><%= news[i].title %></h2>
                            <p><%= news[i].description %></p>        
                        </div>
                    <% } %>
                </section>
                    
                <section class="col-4 p-3 my-3 border">
                    <h1 class="h2 text-primary">Add News</h1>
                    <form class="row g-3 container" action="/add-news" method="POST">
                        <label for="fname">Titulo</label>
                        <input class="form-control" type="text" id="title" name="title" placeholder="Titulo">
                        <label for="fname">Descripcion</label>
                        <textarea class="form-control" rows="5" id="description" name="description"></textarea>
                        <button type="submit" class="btn btn-primary ">Enviar</button>
                    </form>
                </section>
            </div>
        </article>
    </body>
</html>